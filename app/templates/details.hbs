<div class="artistHeader">
  <div class="row">
  <div class="col-md-6">
    <img src="{{model.artists.images.[0].url}}" class="artist-size"/>
  </div>
  <div class="col-md-6">
    <br>
    <br>
    <h1 class="artist-title">{{model.artists.name}}</h1>
     <iframe src="https://embed.spotify.com/follow/1/?uri={{model.artists.uri}}&size=detail&theme=light" width="300" height="56" scrolling="no" frameborder="0" style="border:none; overflow:hidden;" allowtransparency="true"></iframe>
     <h2>Followers: {{model.artists.followers.total}}</h2>
     <h2>Popularity: {{model.artists.popularity}} {{artist-popularity model.artists.popularity}}</h2>
  </div>
 </div>
 </div>

 <br>
 <br>
 <br>
   <h1 class="text-center">Albums</h1>
   <div class="flex-container">
     {{#each model.albums as |album|}}

    <div class="col-md-4 padding-right">
      <img src="{{album.images.[0].url}}" width="300px" height="300px"/>
      <iframe class="player"src="https://embed.spotify.com/?uri={{album.uri}}&theme=white" width="300" height="80" frameborder="0" allowtransparency="true"></iframe>
    </div>
    {{/each}}
</div>
